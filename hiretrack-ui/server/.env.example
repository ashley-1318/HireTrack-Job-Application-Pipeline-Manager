PORT=5174
# MongoDB connection string (SRV or standard URI)
MONGO_URI=your_mongodb_connection_string

# Cloudinary credentials (create at https://cloudinary.com/)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# JWT and admin auth for the dashboard
JWT_SECRET=replace_with_secure_random_string
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=supersecurepassword

# Storage provider for resumes: "cloudinary" (default) or "gdrive"
STORAGE_PROVIDER=cloudinary

# If using Google Drive instead of Cloudinary:
# DRIVE_FOLDER_ID=your_drive_folder_id
# GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\service-account.json
# DRIVE_SHARE_PUBLIC=true

# Set during GitHub Pages build to adjust Vite base path
GITHUB_PAGES=true